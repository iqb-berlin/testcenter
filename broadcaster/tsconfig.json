{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "paths": {
      "testcenter-common/*": [
        "../common/src/*"
      ]
    },
    "types": ["jest"]
  },
  "exclude": ["node_modules", "dist", "**/*spec.ts"]
}
